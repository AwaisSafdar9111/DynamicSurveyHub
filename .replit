modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Frontend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Database Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Direct Database Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test API Server"

[[workflows.workflow]]
name = "Angular Frontend Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ClientApp && export NODE_OPTIONS=\"--max-old-space-size=2048\" && export NG_CLI_ANALYTICS=false && npx ng serve --host 0.0.0.0 --port 5000 --disable-host-check"
waitForPort = 5000

[[workflows.workflow]]
name = "Database Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node migrate.js"

[[workflows.workflow]]
name = "Direct Database Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node migrate-direct.js"

[[workflows.workflow]]
name = "Test API Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node test-server.js"

[deployment]
run = ["sh", "-c", "cd ClientApp && npm install && ng serve --host 0.0.0.0 --port 5000"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
